<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="0.5dp" android:left="0.5dp" android:top="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:right="1dp" android:left="1dp" android:top="0dp" android:bottom="3dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" />
        </shape>
    </item>
</layer-list>
