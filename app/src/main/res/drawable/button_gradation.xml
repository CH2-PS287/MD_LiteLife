<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_gradient_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#67BE77"
                android:centerColor="#8FCD91"
                android:endColor="#BADEAD"
                android:angle="0"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#67BE77"
                android:centerColor="#9FD39B"
                android:endColor="#BADEAD"
                android:angle="0"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
